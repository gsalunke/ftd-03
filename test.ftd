ftd.color menu_link:
ftd.color menu_link_active:
ftd.color menu_border:

-- ftd.column:
if: { !is_empty(show_children_mobile.children) }
padding.px: 5
padding-left.px: 15

-- l_mobile:
obj: $obj
$loop$: $show_children_mobile.children as $obj
menu_link: $show_children_mobile.menu_link
menu_link_active: $show_children_mobile.menu_link_active

-- end: ftd.column

-- end: show_children_mobile







-- component l_mobile:
fpm.toc-item obj:
ftd.color menu_link:
ftd.color menu_link_active:

-- ftd.column:
width: fill

-- ftd.row:
if: { l_mobile.obj.url != NULL }
width: fill-container

-- ftd.image:
;; if: { l_mobile.obj.font-icon != NULL } -- TODO FTD 0.3
